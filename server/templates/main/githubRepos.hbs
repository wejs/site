<h1>{{title}}</h1>
<div class="container">
  <br>

  <div class="row">
    <div class="col-lg-12">
      <form class="form-inline">
        <div class="form-group">
          <label for="search">Search</label>
          <input type="text" class="form-control" id="searchField" placeholder="Type to search...">
        </div>
      </form>
      <table class="table table-striped table-hover">
        <thead>
          <tr>
            <th>{{t 'name'}}</th>
            <th>{{t 'description'}}</th>
            <th>{{t 'link'}}</th>
          </tr>
        </thead>

        <tbody>
          {{#each data}}
            <tr>
              <td>{{name}}</td>
              <td>{{description}}</td>
              <td>
                <a href="{{html_url}}" class="btn btn-default" target="_blank">Project Page</a>
              </td>
            </tr>
          {{/each}}
        </tbody>
      </table>
    </div>
  </div>

  <script>
    $('#searchField').on('keyup', function() {
      var value = $(this).val();

      $('table tr').each(function(key) {
        var $row = $(this), tdEl, text, matchedIndex;
        if (key !== 0) {
          var tdEl = $row.find('td:first');
          text = tdEl.text();
          matchedIndex = text.indexOf(value);

          if (matchedIndex === -1) {
            $row.hide();
          } else {
            $row.show();
          }
        }
      });
    });
  </script>
</div>
